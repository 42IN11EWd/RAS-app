<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           mc:Ignorable="d" 
            x:Class="RunApproachStatistics.View.MainWindow" MinWidth="1024" MinHeight="576"
        Title="Run Approach Statistics" WindowState="Maximized" d:DesignWidth="1920" d:DesignHeight="1080" Icon="pack://application:,,,/Images/Icon.ico">

    <Window.InputBindings>
        <KeyBinding Key="L"
                    Modifiers="Control"
                    Command="{Binding LockScreenCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <ContentControl x:Name="ContentContainer"
			    Content="{Binding Content}" Margin="0,0,0,0" />
    </Grid>
</Window>
