<UserControl x:Class="RunApproachStatistics.View.MeasurementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             xmlns:v="clr-namespace:RunApproachStatistics.View"
             mc:Ignorable="d" 
             d:DesignWidth="1920" d:DesignHeight="1080" Background="White" >
    
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">

            <Image Source="pack://application:,,,/Images/Logo.png" Margin="1505,0,10,850"/>

            <ContentControl x:Name="RatingContainer"
			    Content="{Binding Path=RatingControl}" Margin="1652,495,50,540" Width="218" Height="45"/>

            <ListView Grid.Column="1"  SelectedItem="{Binding SelectedThumbnail}" ItemsSource="{Binding ThumbnailCollection}" Margin="0,0,0,0" Height="1080" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:ThumbnailView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Grid Height="635" Width="1130" Name="cameraGrid" Margin="336,31,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Black" Grid.Column="1">
                <ContentControl x:Name="cameraView" Content="{Binding Path=CameraView}"/>
            </Grid>
            <Rectangle Fill="{Binding Path=RectangleColor}" HorizontalAlignment="Left" Height="1080" Margin="305,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="1183" Panel.ZIndex="-1" StrokeThickness="0"/>

            <ContentControl x:Name="graphViewMeasurement" Content="{Binding Path=GraphViewMeasurement}" Margin="336,0,454,25" Height="365" VerticalAlignment="Bottom"/>

            <CheckBox IsChecked="{Binding Path=ManualModeChecked}" Margin="0,0,29,195" FontSize="14" Content="Manual mode" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="198">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Button  Content="{Binding Path=MeasurementButtonContent}" Width="398" Margin="0,0,29,114" FontSize="32" IsEnabled="{Binding Path=ManualModeChecked}" Command="{Binding Path=StartMeasurementCommand}" HorizontalAlignment="Right" Height="64" VerticalAlignment="Bottom"/>
            <Button Content="Stop Session" Margin="0,0,29,25" FontSize="32" VerticalAlignment="Bottom" Height="64" Command="{Binding Path=PostMeasurementCommand}" RenderTransformOrigin="0.804,0.1" HorizontalAlignment="Right" Width="398"/>
            <Label Height="45" Content="Total Score" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,280" VerticalAlignment="Bottom"/>
            <Label Content="Penalty" Height="45" FontSize="24" Margin="0,0,265,345"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="160"/>
            <Label Content="E-score" Height="45" FontSize="24" Margin="0,0,265,410" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="160"/>
            <Label Content="D-score" Height="45" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,475" VerticalAlignment="Bottom"/>
            <Label Content="Rating" Height="45" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,540" VerticalAlignment="Bottom"/>
            <Label Content="Vault number" Height="45" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,605" VerticalAlignment="Bottom"/>
            <Label Content="Gymnast" Height="45" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,670" VerticalAlignment="Bottom"/>
            <Label Content="Location" Height="45" FontSize="24" Width="160" HorizontalAlignment="Right" Margin="0,0,265,735" VerticalAlignment="Bottom"/>
            <Label Content="Vault kind" Height="45" FontSize="24" Margin="0,0,265,800" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="160"/>

            <toolkit:AutoCompleteBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,800" Text="{Binding Path=VaultKind, ValidatesOnNotifyDataErrors=True, Mode=TwoWay}" Style="{StaticResource autoCompleteTextBoxInError}" VerticalAlignment="Bottom" ItemsSource="{Binding Path=VaultKinds}" FilterMode="Contains"/>
            <toolkit:AutoCompleteBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,735" Text="{Binding Path=Location, ValidatesOnNotifyDataErrors=True, Mode=TwoWay}" Style="{StaticResource autoCompleteTextBoxInError}" VerticalAlignment="Bottom" ItemsSource="{Binding Path=Locations}" FilterMode="Contains"/>
            <toolkit:AutoCompleteBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,670" Text="{Binding Path=Gymnast, ValidatesOnNotifyDataErrors=True, Mode=TwoWay}" Style="{StaticResource autoCompleteTextBoxInError}" VerticalAlignment="Bottom" ItemsSource="{Binding Path=Gymnasts}" FilterMode="Contains"/>
            <toolkit:AutoCompleteBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,605" Text="{Binding Path=VaultNumber, ValidatesOnNotifyDataErrors=True, Mode=TwoWay}" Style="{StaticResource autoCompleteTextBoxInError}" VerticalAlignment="Bottom" ItemsSource="{Binding Path=VaultNumbers}" FilterMode="Contains"/>
            <TextBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,475" TextWrapping="Wrap" Text="{Binding Path=Dscore, ValidatesOnNotifyDataErrors=True}" Style="{StaticResource textBoxInError}" VerticalAlignment="Bottom" />
            <TextBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,410" TextWrapping="Wrap" Text="{Binding Path=Escore, ValidatesOnNotifyDataErrors=True}" Style="{StaticResource textBoxInError}" VerticalAlignment="Bottom" />
            <TextBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,345" TextWrapping="Wrap" Text="{Binding Path=Penalty, ValidatesOnNotifyDataErrors=True}" Style="{StaticResource textBoxInError}" VerticalAlignment="Bottom"/>
            <TextBox FontSize="24" Width="218" Height="45" HorizontalAlignment="Right" Padding="0" Margin="0,0,50,280" TextWrapping="Wrap" Text="{Binding Path=Totalscore, ValidatesOnNotifyDataErrors=True}" Style="{StaticResource textBoxInError}" VerticalAlignment="Bottom" IsEnabled="False"/>

            <CheckBox IsChecked="{Binding Path=VaultKindChecked}" Margin="0,0,8,800" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=LocationChecked}" Margin="0,0,8,735" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=GymnastChecked}" Margin="0,0,8,670" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=VaultNumberChecked}" Margin="0,0,8,605" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=RatingChecked}" Margin="0,0,8,540" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=DscoreChecked}" Margin="0,0,8,475" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=EscoreChecked}" Margin="0,0,8,410" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=PenaltyChecked}" Margin="0,0,8,345" FontSize="14" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
    </Viewbox>
</UserControl>
