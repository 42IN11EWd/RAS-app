<UserControl x:Class="RunApproachStatistics.View.PostMeasurementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:RunApproachStatistics.View"
             xmlns:mvvm="clr-namespace:RunApproachStatistics.MVVM"
              mc:Ignorable="d" 
             d:DesignWidth="1920" d:DesignHeight="1080" Background="White">
    <UserControl.Resources>
        <mvvm:MultiParameterConverter x:Key="ParameterConverter" />
        <Style x:Key="toolTipWhenDisabled" TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="ToolTip" Value="Not all input is valid"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MenuColumn" Width="325"/>
                <ColumnDefinition x:Name="ContentColumn" Width="437*" MinWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- START Column 0 -->
            <ContentControl x:Name="menuContainer"
			    Content="{Binding Menu}" Margin="0,0,0,0" />
            <!-- END Column 0 -->

            <ContentControl x:Name="RatingContainer"
			    Content="{Binding RatingControl}" Margin="1133,660,162,375" Grid.Column="1" />
            <Label FontSize="24" Width="200" Height="45" Content="Gymnast"  HorizontalAlignment="Right" Margin="0,0,1217,440" VerticalAlignment="Bottom" Grid.Column="1"/>
            <Label FontSize="24" Width="200" Height="45" Content="Date and Time" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,1217,375" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Timespan" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,1217,310" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Vault number" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,1217,245" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Location" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,1217,180" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Vault kind" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,440" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Rating" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,375" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="D-score" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,310" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="E-score" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,245" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Penalty" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,180" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="200" Height="45" Content="Total score" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,502,115" VerticalAlignment="Bottom"/>
            <TextBox x:Name="gymnastBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,877,440" TextWrapping="Wrap" Text="{Binding Path=Gymnast}" VerticalAlignment="Bottom" IsEnabled="{Binding ChangeState}" />
            <Label FontSize="24" Width="300" Height="45" Content="{Binding Path=Datetime}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,877,375" VerticalAlignment="Bottom"/>
            <Label FontSize="24" Width="300" Height="45" Content="{Binding Path=Timespan}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,877,310" VerticalAlignment="Bottom"/>
            <TextBox x:Name="vaultNumberBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,877,245" TextWrapping="Wrap" Text="{Binding Path=VaultNumber,ValidatesOnNotifyDataErrors=True}" VerticalAlignment="Bottom" IsEnabled="{Binding ChangeState}" />
            <TextBox x:Name="locationBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,877,180" TextWrapping="Wrap" Text="{Binding Path=Location}" VerticalAlignment="Bottom" IsEnabled="{Binding ChangeState}"  />
            <TextBox x:Name="dScoreBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,162,310" TextWrapping="Wrap" Text="{Binding Path=DScore, ValidatesOnNotifyDataErrors=True}" VerticalAlignment="Bottom" Style="{StaticResource textBoxInError}" IsEnabled="{Binding ChangeState}"/>
            <TextBox x:Name="eScoreBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,162,245" TextWrapping="Wrap" Text="{Binding Path=EScore, ValidatesOnNotifyDataErrors=True}" VerticalAlignment="Bottom" Style="{StaticResource textBoxInError}" IsEnabled="{Binding ChangeState}"/>
            <TextBox x:Name="penaltyBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,162,180" TextWrapping="Wrap" Text="{Binding Path=Penalty, ValidatesOnNotifyDataErrors=True}" VerticalAlignment="Bottom" Style="{StaticResource textBoxInError}" IsEnabled="{Binding ChangeState}" />
            <TextBox x:Name="totalScoreBox" FontSize="24" Width="300" Height="45" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,162,115" TextWrapping="Wrap" Text="{Binding Path=TotalScore}" VerticalAlignment="Bottom" IsEnabled="False"/>

            <ListView Grid.Column="1"  SelectedItem="{Binding SelectedThumbnail}" ItemsSource="{Binding ThumbnailCollection}" Margin="178,10,0,0" Height="552" VerticalAlignment="Top" HorizontalAlignment="Left" Width="1255">
                <!-- ItemsPanelTemplate -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!-- ItemTemplate -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:ThumbnailView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Finish" FontSize="24" Grid.Column="1" Command="{Binding FinishCommand}" HorizontalAlignment="Right" Margin="0,0,82,27" VerticalAlignment="Bottom" Width="175" Height="50"/>
            <Button Content="Delete" FontSize="24" Grid.Column="1" Command="{Binding DeleteCommand}" HorizontalAlignment="Right" Margin="0,0,422,27" VerticalAlignment="Bottom" Width="175" Height="50"/>
            <Button Content="Cancel" FontSize="24" Grid.Column="1" Command="{Binding CancelCommand}" HorizontalAlignment="Right" Margin="0,0,653,27" VerticalAlignment="Bottom" Width="175" Height="50"/>
            <!-- Multiple binding to save all info-->
            <Button Content="Save" FontSize="24" Grid.Column="1" Command="{Binding SaveCommand}" HorizontalAlignment="Right" Margin="0,0,877,27" VerticalAlignment="Bottom" Width="175" Height="50">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ParameterConverter}">
                        <MultiBinding.Bindings>
                            <Binding ElementName="gymnastBox" Path="Text"/>
                            <Binding ElementName="vaultNumberBox" Path="Text"/>
                            <Binding ElementName="locationBox" Path="Text"/>
                            <Binding ElementName="vaultKindSelected" Path="Text"/>
                            <Binding ElementName="dScoreBox" Path="Text"/>
                            <Binding ElementName="eScoreBox" Path="Text"/>
                            <Binding ElementName="penaltyBox" Path="Text"/>
                            <Binding ElementName="totalScoreBox" Path="Text"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <ComboBox x:Name="vaultKindSelected" SelectedValue="{Binding SelectedVaultKind, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Path=VaultKind, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Margin="1133,595,0,0" VerticalAlignment="Top" Width="300" Height="45" SelectionChanged="ComboBox_SelectionChanged" IsEnabled="{Binding ChangeState}"/>

        </Grid>
    </Viewbox>
</UserControl>
